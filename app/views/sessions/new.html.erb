Login Page

<br><br><BR>
<%= form_for(:sessions, url: login_path) do |f| %>
	<%= f.label :email %>
	<br>
	<%= f.text_field :email %>
	<br><br>
	<%= f.label :password %><br>
	<%= f.password_field :password %><br><br>

	<%= f.check_box :remember_me %>
	<%= f.label :remember_me %><br><br>

	<%= f.submit :submit %>
<% end %>

